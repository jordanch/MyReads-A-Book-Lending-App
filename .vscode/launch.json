    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "attach",
            "name": "Attach to Firefox",
            "url": "http://localhost:3000/index.html",
            "webRoot": "${workspaceFolder}/webpack:///src"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/src/App.js"
        }
    ]
}